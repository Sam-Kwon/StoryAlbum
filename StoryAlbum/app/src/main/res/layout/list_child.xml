<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/story_image"
        android:layout_width="@dimen/story_image_width"
        android:layout_height="@dimen/story_image_height"
        android:layout_marginLeft="@dimen/story_image_left_margin"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/story_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/story_title_left_padding"
            android:text="test"
            android:textSize="@dimen/font_size_story_title"
            />
        <TextView
            android:id="@+id/story_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/story_date_left_padding"
            android:text="test"
            android:textSize="@dimen/font_size_story_title"
            />
    </LinearLayout>
</LinearLayout>
